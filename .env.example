# Application
APP_NAME=predictive-propositions-service
APP_ENV=development
DEBUG=true

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/propositions
FEATURE_STORE_URL=duckdb:///feature_store.db

# Redis
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=600

# Kafka (Event Streaming)
KAFKA_BROKER=localhost:9092
KAFKA_TOPIC_EVENTS=proposition-events

# ML Model
MODEL_PATH=src/ml/models/ranker_v1.pkl
MODEL_VERSION=v1

# Monitoring
PROMETHEUS_PORT=8001
LOG_LEVEL=INFO

# Features
ENABLE_CACHING=true
ENABLE_ML_RANKING=false
